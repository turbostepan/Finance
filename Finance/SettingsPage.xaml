<Page x:Class="Finance.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="MyTextBlock" Text="Настройки" 
                   FontSize="36" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0 30 0 0" 
                   />

        <StackPanel x:Name="MainStackPanel" Grid.Row="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center">
            <Button Name="ToggleThemeButton" Content="Включить темную тему" 
            Background="{StaticResource ElementsColor}" 
            Width="350" 
            Height="80" 
            FontSize="24" 
            FontWeight="Bold" 
            Click="ToggleThemeButton_Click"/>

            <Button Name="ExitButton" Content="Выйти из приложения" 
            Background="{StaticResource ElementsColor}" 
            Width="350" 
            Height="80" 
            FontSize="24" 
            FontWeight="Bold" 
            Margin="0 200 0 0" 
            Click="ExitButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
