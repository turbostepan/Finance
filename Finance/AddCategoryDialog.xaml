<Window x:Class="Finance.AddCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
         Title="Добавить категорию" Height="200" Width="300" Background="{StaticResource PrimaryColor}">
    <Grid Margin="10">
        <Label Content="Имя категории:" VerticalAlignment="Top" />
        <TextBox x:Name="CategoryNameTextBox" VerticalAlignment="Top" Margin="0,30,0,0" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0,60,0,0">
            <Button Content="Добавить" Width="75" Click="AddButton_Click" Background="{StaticResource ElementsColor}" />
            <Button Content="Отмена" Width="75" Click="CancelButton_Click" Background="Red" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
