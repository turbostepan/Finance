<Page x:Class="Finance.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Finance"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <StackPanel Grid.Row="1"
       VerticalAlignment="Center"
       HorizontalAlignment="Center">
            <TextBlock Text="Авторизация"
      FontSize="18px"
      Margin="0 0 0 20px"
          Foreground="{StaticResource TextColor}"/>
            <TextBox x:Name="LoginTextBox"
    Width="200px"
    Height="30px"
    Margin="0 0 0 20px"/>
            <TextBox 
Width="200px"
Height="30px"
Margin="0 0 0 20px"/>
            <TextBox 
Width="200px"
Height="30px"
Margin="0 0 0 20px"/>
            <PasswordBox
        Width="200px"
        Height="30px"
        Margin="0 0 0 20px"/>
            <Button Content="Зарегистроваться"
   Width="auto"
   Height="40px"
   Margin="0 5px 0 0"
   Background="{StaticResource ElementsColor}"
   Foreground="{StaticResource SecondaryColor}"
       Cursor="Hand"
       FontSize="16px" Click="Login_Button_Click"/>


            <TextBlock Text="Вернуться назад"
          HorizontalAlignment="Center"
          Margin="0 20px 0 0"
          Cursor="Hand"
          FontSize="16px"
          Foreground="{StaticResource SecondaryColor}"/>
        </StackPanel>
    </Grid>
</Page>
