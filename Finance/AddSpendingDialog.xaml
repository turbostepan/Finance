<Window x:Class="Finance.AddSpendingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
       Title="Добавить расход" Height="250" Width="300">
    <Grid Margin="10">
        <Label Content="Сумма:" VerticalAlignment="Top" />
        <TextBox x:Name="AmountTextBox" VerticalAlignment="Top" Margin="0,30,0,0" />

        <Label Content="Категория:" VerticalAlignment="Top" Margin="0,60,0,0" />
        <TextBox x:Name="CategoryTextBox" VerticalAlignment="Top" Margin="0,90,0,0" />

        <Label Content="Описание:" VerticalAlignment="Top" Margin="0,120,0,0" />
        <TextBox x:Name="SpendingAmountTextBox" VerticalAlignment="Top" Margin="0,150,0,0" Height="50" TextWrapping="Wrap"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,210,0,0">
            <Button Content="Добавить" Width="75" Click="AddButton_Click" />
            <Button Content="Отмена" Width="75" Click="CancelButton_Click" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
