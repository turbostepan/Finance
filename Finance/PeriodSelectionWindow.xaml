<Window x:Class="Finance.PeriodSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
        Title="Выбор периода" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите период" FontSize="24" Margin="0 0 0 20"/>

        <TextBlock Text="Начальная дата:"/>
        <DatePicker x:Name="StartDatePicker" Margin="0 0 0 10"/>

        <TextBlock Text="Конечная дата:"/>
        <DatePicker x:Name="EndDatePicker" Margin="0 0 0 20"/>

        <Button Content="Применить" Width="100" Click="ApplyButton_Click"/>
    </StackPanel>
</Window>
