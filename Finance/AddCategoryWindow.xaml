<Window x:Class="Finance.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
       Title="Добавить категорию" Height="150" Width="300" Background="{StaticResource PrimaryColor}">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название категории:"/>
            <TextBox x:Name="CategoryNameTextBox"/>
            <Button Content="Добавить" Click="AddButton_Click" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
